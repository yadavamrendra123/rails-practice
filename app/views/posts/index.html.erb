<h1>Posts index page</h1>



<table style="border:1px solid red">
  <thead>
  <tr>
    <th>Id</th>
    <th>Tile</th>
    <th>Description</th>
    <th>Actions</th>
  </tr>
  </thead>
  <body>
  <%@posts.each do |post| %>
  <tr>
    <td><%=post.id %></td>
    <td><%= post.title %></td>
    <td><%= post.description %></td>

    <td><%= button_to 'Delete',  post_path(post),  method: :delete %></td>
  </tr>
    <%end %>
  </body>
</table>